<h1>New Post</h1>
<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
